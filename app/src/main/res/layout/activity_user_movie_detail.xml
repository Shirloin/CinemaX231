<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack_231.cinemax231.user.UserMovieDetailActivity">

    <include layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_below="@+id/appbar"
        >
        <ImageView
            android:id="@+id/imgv"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/dummy_image1"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Mighty Ape"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 120 minutes"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre: Animation"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language: Japanese"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After receiving death threats and other online bullying, Kaede Azusagawa had a dissociative break resulting in complete amnesia. For the next two years, she lived as a completely new person, a shut-in hiding from the world. Luckily, thanks to her brother and some new friends, she was able to recoverâ€”though said recovery came at a price: those two years' worth of memories"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            />
    </LinearLayout>

    <Button
        android:id="@+id/user_movie_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/primary"
        android:text="Book"
        android:padding="8dp"
        android:textSize="20sp"
        android:layout_margin="12dp"
        />


</RelativeLayout>