<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/gap_small"
            android:paddingVertical="@dimen/gap_small">
            <ImageView
                android:id="@+id/item_manage_booking_image"

                android:layout_width="@dimen/manage_bookings_image_width"
                android:layout_height="@dimen/manage_bookings_image_height"
                android:src="@drawable/dummy_image1">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/item_manage_booking_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Sasayaku you ni Koi wo Utau"
                    android:fontFamily="@font/inria_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_tiny">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/gap_tiny"
                    ></View>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:alignItems="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_local_movies_24"
                        ></ImageView>
                    <TextView
                        android:id="@+id/item_manage_booking_ticket"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket x2"
                        android:fontFamily="@font/inria_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_tiny"></TextView>
                </com.google.android.flexbox.FlexboxLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/gap_tiny"
                    ></View>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:alignItems="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_person_grey_24"
                        ></ImageView>
                    <TextView
                        android:id="@+id/item_manage_booking_user"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:fontFamily="@font/inria_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_tiny"></TextView>
                </com.google.android.flexbox.FlexboxLayout>
                <TextView
                    android:id="@+id/item_manage_booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 - 12:00"
                    android:fontFamily="@font/inria_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_tiny"></TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/gap_tiny"
                    ></View>
                <TextView
                    android:id="@+id/item_manage_booking_date_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday, 25 January 2023, Location"
                    android:fontFamily="@font/inria_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_tiny"></TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/gap_tiny"
                    ></View>

                <TextView
                    android:id="@+id/item_manage_booking_hash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inria_sans_regular"
                    android:text="asudasud1928737123ha"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_tiny"></TextView>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="flex_end">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manage_booking_approve"
                android:layout_width="@dimen/manage_bookings_button_width"
                android:layout_height="@dimen/manage_bookings_button_height"
                android:text="Approve"
                android:fontFamily="@font/inria_sans_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_safe"
                android:layout_marginRight="@dimen/gap_small">
            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manage_booking_reject"
                android:layout_width="@dimen/manage_bookings_button_width"
                android:layout_height="@dimen/manage_bookings_button_height"
                android:text="Reject"
                android:fontFamily="@font/inria_sans_bold"
                android:textColor="@color/white"
                android:background="@drawable/button_danger"
                android:layout_marginRight="@dimen/gap_small">
            </androidx.appcompat.widget.AppCompatButton>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>